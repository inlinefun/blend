{
    "schemaVersion": 1,
    "id": "blend",
    "version": "${version}",
    "name": "blend",
    "description": "The 'Blend' client using the Fabric Mod Loader",
    "authors": [
        "inlinefun"
    ],
    "contact": {
        "sources": "https://github.com/inlinefun/blend"
    },
    "license": "GPL-3.0",
    "icon": "assets/blend/icon.png",
    "environment": "*",
    "entrypoints": {
        "client": [
            {
                "value": "blend.Initializer",
                "adapter": "kotlin"
            }
        ]
    },
    "mixins": [
        "blend.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${loader_version}",
        "minecraft": "~${minecraft_version}",
        "java": ">=21",
        "fabric-language-kotlin": ">=${fabric_kotlin_version}"
    },
    "suggests": {
        "another-mod": "*"
    }
}